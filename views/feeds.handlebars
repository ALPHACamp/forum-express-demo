{{> restaurant-tabs route='feeds'}}

<h1>最新動態</h1>
<hr />
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
          <div>
            <h4>
              <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
              <small class="fs-6">[{{this.Category.name}}]</small>
            </h4>
            <p>{{this.description}}</p>
            {{relativeTimeFromNow this.createdAt}}
            <hr>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
          <div>
            <h4>
              <a class="link-primary" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
            </h4>
            <p>{{this.text}}</p>
            by <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
            at {{relativeTimeFromNow this.createdAt}}
            <hr>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>